{
  "name": "locio",
  "version": "0.1",
  "description": "A continuous localization command line interface.",
  "author": "Avansai (https://avansai.com)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Avansai/locio.git"
  },
  "license": "MIT",
  "main": "lib/locio.js",
  "types": "lib/locio.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build-watch": "npm-watch",
    "build": "rm -Rf ./lib && tsc",
    "type-check": "tsc --project tsconfig.json --pretty --noEmit",
    "lint": "eslint --ext js,jsx,ts,tsx --fix",
    "release": "dotenv -- release-it --only-version"
  },
  "keywords": [
    "continuous localization",
    "pipeline",
    "translation",
    "multilingual",
    "i18n",
    "internationalization",
    "intl",
    "localization",
    "l10n",
    "globalization",
    "g11n"
  ],
  "type": "commonjs",
  "engines": {
    "node": ">=13"
  },
  "watch": {
    "build": {
      "patterns": "*",
      "extensions": "*.ts?(x)",
      "ignore": "node_modules"
    }
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^3.3.0",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.2.4",
    "prettier": "2.4.1",
    "release-it": "^14.11.6",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "npm-watch": "^0.11.0"
  },
  "bugs": {
    "url": "https://github.com/Avansai/locio/issues"
  },
  "homepage": "https://github.com/Avansai/locio#readme",
  "directories": {
    "doc": "docs",
    "example": "example",
    "lib": "lib"
  }
}
